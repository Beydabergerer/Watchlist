from tkinter import *
from tkinter import messagebox
def new():
    a = entry.get()
    if a != "":
        lb.insert(END, a)
        entry.delete(0, "end")
    else:
        messagebox.showwarning("!!!")
def delete():
    lb.delete(ANCHOR)

ws = Tk()
ws.geometry('500x450+500+200')
ws.title('Bitch')
ws.resizable(width=False, height=False)
frame = Frame(ws)
frame.pack(pady=10)

lb = Listbox(frame, activestyle="none")
lb.pack(side=LEFT, fill=BOTH)

list = ['Rick and Morty', 'Haus des Geldes']

for i in list:
    lb.insert(END, i)

sb = Scrollbar(frame)
sb.pack(side=RIGHT, fill=BOTH)

lb.config(yscrollcommand=sb.set)
sb.config(command=lb.yview)

entry = Entry(ws)
entry.pack(pady=20)

button_frame = Frame(ws)
button_frame.pack(pady=20)

addB = Button(button_frame, text='+', command=new)
addB.pack(fill=BOTH, expand=True, side=LEFT)

delB = Button(button_frame, text='-', command=delete)
delB.pack(fill=BOTH, expand=True, side=LEFT)

ws.mainloop()
